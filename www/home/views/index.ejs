<style type="text/css">

  [data-ng-cloak].controller {
    display: none !important;
  }

  @keyframes rotate360 {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @-webkit-keyframes rotate360 {
    from { -webkit-transform: rotate(0deg); }
    to { -webkit-transform: rotate(360deg); }
  }

  .splash {
    display:block;
    position:absolute; top:0; left:0; width:100%; height:100%;
    background-color: #eeeeee;
  }

  .splash div {

    border-radius: 50px !important;
    border-style: solid;
    border-bottom-color: #e74c3c;
    border-top-color: #e74c3c;
    border-left-color: #bbb;
    border-right-color: #bbb;
    animation: rotate360 1s linear infinite;
    -webkit-animation: rotate360 1s linear infinite;
    border-width: 6px;

    width: 60px;
    height:60px;

    text-align: center;
    position: fixed;
    margin: 0 auto;
    
    top: 50%;
    left: 50%;
    margin-top:-30px;
    margin-left:-30px;
  }

</style>

<div data-ng-controller="boot">
  <div class="splash" data-ng-hide="visible">
    <div></div>
  </div>
  <div id="wrapper" class="controller" data-ng-show="visible" data-ng-cloak=""> 
    <div class="wrapper">
      <%- partial ('../.tmp/public/partials/header.html') %>
      <%- partial ('../.tmp/public/partials/breadcrumbs.html') %>
      <div ui-view></div>
      <%- partial ('../.tmp/public/partials/footer.html') %>
    </div>
  </div>
</div>